					.col-md-6.col-xl-12
						.detailPays
							.detailPays-item.icon-pay1
							.detailPays-item.icon-pay2
							.detailPays-item.icon-pay3

	// </div>
	.wavesBlue 
		.bin 
			.row
				.col-xl-6 
					.ttl Отзывы о товаре (3)
					include includes/reviews.pug

				.col-xl-6
					.ttlDetail.detailTtlRev Оставьте свой отзыв
					form.form.form--white.formAjax
						.row
							.col-md-8.col-xl-12
								.row
									.col-6
										label(for='rev-name') Представьтесь
										.inputWrap
											input.input(type='text' placeholder='Гость' id='rev-name' name='name')

									.col-6
										label(for='rev-email') E-mail
										.inputWrap
											input.input(type='email' id='rev-email' name='email' )

									.col-6
										label(for='rev-date') Дата доставки
											span.req *
										.inputWrap
											input.input.datepicker(type='text' id='rev-date' name='date' required)
									
									.col-6
										label(for='rev-stars') Оцените
										.form-stars
											+stars
							.col-md-4.col-xl-12
								label(for='rev-comment') Отзыв
									span.req *
								.inputWrap
									textarea.textarea.textarea--cartComment(placeholder='Текст сообщения...'  id='rev-comment' name='comment' required)
						.d-flex.aling-center.justify-content-between
							label.label.fancyForm-agree
									.switch
										input(type="checkbox" name="checkbox" value="0" checked disabled)
										.switch-span
									.label-text Даю согласие на обработку 
										a(href='' target='_blank') персональных данных
							button.button Отправить

	// <div class='bin'>
